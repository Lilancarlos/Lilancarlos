#include<stdio.h>
#include<stdlib.h>
void func(int n);
int main(void)
{
	int n;                   //定义一个整形的变量n
	printf("请输入一个整数\n");//提示用户输入一个整数
	scanf_s("%d", &n);       //将用户刚刚输进缓存区的变量的
	func(n);
	system("pause");         //将黑色窗口停留，用户按任意键后才会退出
	return 0;              
}
void func(int n)
{//实现方法：递归
	if (n < 9)//这个是递归的结束条件
	{
		printf("'%d'", n);
	}
	else
	{
		int m = n % 10;//将n这个变量的值的第一位数的保存在m中
		n = n / 10;
		printf("'%d'\t", m);//打印出每一位数,数与数之间有\t这个空格符来分割开
		func(n);
		
	}

}
