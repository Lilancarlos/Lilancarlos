#include<stdio.h>
int main(void)
{
	int i, j;
	for (i = 1; i <= 9; i++)
	{
		for (j = 0; j < i; j++)
		{
			printf(" ");//变量j从0~i利用空格填充
		}
		for (j = i; j <= 9; j++)//从j=i开始，一直到j=9的时候结束，打印i*j的值
		{
			printf("%d*%d=%d\t", i, j, i * j);
			//每个i*j之间要用\t来分割开
		}
		printf("\n");//在每行结束后要换行
	}
	return 0;
	}
